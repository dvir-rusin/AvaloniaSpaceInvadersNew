<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaSpaceInvaders.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:AvaloniaSpaceInvaders.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaSpaceInvaders.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="AvaloniaSpaceInvaders">

	<Grid>
		<ContentControl Name="CurrentView"/>
		<Panel Name="Stack" Background="Purple" VerticalAlignment="Bottom">
			<TextBlock  HorizontalAlignment="Center" Text="avalonia"></TextBlock>
			<Button Click="ClickHandler" Name="ChangeView" HorizontalAlignment="Right">Change View</Button>
		</Panel>
	</Grid>
        
	
</Window>
